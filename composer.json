{
    "name": "addsdev/my-garden",
    "description": "API en PHP para gestionar plantas y eventos de riego en un jard√≠n personal.",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Ruiz",
            "email": "addsdeveloper@gmail.com",
            "homepage": "https://github.com/addsdev-campuslands"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^12.21",
        "respect/validation": "^2.4"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8081 -t public",
        "test": "phpunit"
    }
}
